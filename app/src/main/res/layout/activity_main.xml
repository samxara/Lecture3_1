<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/smxr_01"
        android:layout_marginStart="105dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/selectName"
            android:layout_width="match_parent"
            android:hint="First Name : Giorgi"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:background="#59BCBCBC"
            android:maxLines="1"
            android:layout_height="50dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/selectLastName"
            android:layout_width="match_parent"
            android:hint="Last Name : Samkharadze"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:background="#59BCBCBC"
            android:maxLines="1"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/selectEmail"
            android:layout_width="match_parent"
            android:hint="Email : giorgi.samkharadze.2@btu.edu.ge"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:background="#59BCBCBC"
            android:maxLines="1"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/selectDateOfBirth"
            android:layout_width="match_parent"
            android:hint="Date of Birth : 1998"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:background="#59BCBCBC"
            android:maxLines="1"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/selectGender"
            android:layout_width="match_parent"
            android:hint="Gender : Male"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:background="#59BCBCBC"
            android:maxLines="1"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    
    <Button
        android:id="@+id/profileChangeButton"
        android:layout_width="match_parent"
        android:text="Profile Change"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#07209C"
        android:layout_marginTop="250dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="50dp"
        />


</FrameLayout>